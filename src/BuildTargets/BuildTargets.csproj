<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.1</TargetFramework>
    <Configurations>Debug;Release</Configurations>
  </PropertyGroup>


  <Target Name="gen_decompiler_menus">
    <Exec Command="cmake -DIS_MSYS=FALSE -DCMAKE_BUILD_TYPE=$(Configuration) -DREKO_PLATFORM=$(Platform) -DTARGET=gen_decompiler_menus -P $(ProjectDir)..\reko.cmake" />
  </Target>

  <Target Name="gen_decompiler_menus_winforms">
    <Exec Command="cmake -DIS_MSYS=FALSE -DCMAKE_BUILD_TYPE=$(Configuration) -DREKO_PLATFORM=$(Platform) -DTARGET=gen_decompiler_menus_winforms -P $(ProjectDir)..\reko.cmake" />
