<?xml version="1.0" encoding="utf-8"?>
<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <TargetFramework>netcoreapp3.1</TargetFramework>
    <GenerateAssemblyInfo>false</GenerateAssemblyInfo>
    <AutoGenerateBindingRedirects>true</AutoGenerateBindingRedirects>
    <GenerateBindingRedirectsOutputType>true</GenerateBindingRedirectsOutputType>
    <ApplicationIcon />
    <OutputType>Exe</OutputType>
    <StartupObject />
    <RootNamespace>Reko.Tools.Makesigs</RootNamespace>
    <AssemblyName>makesigs</AssemblyName>
    <NuGetPackageImportStamp>
    </NuGetPackageImportStamp>
    <Configurations>Debug;Release</Configurations>
  </PropertyGroup>
  <!-- Copy dependencies to the `tools` directory.-->
  <Target Name="CopyToTools" AfterTargets="CopyFilesToOutputDirectory">
    <Message Text="Project dir = $(ProjectDir)" />
    <Copy SkipUnchangedFiles="true" SourceFiles="$(ProjectDir)$(OutDir)$(TargetFileName)" DestinationFolder="$(ProjectDir).." />
  </Target>
  <ItemGroup>
    <Compile Remove="fixwild.cs" />
    <Compile Remove="makedsig.cs" />
    <Compile Remove="perflib.cs" />
    <Compile Remove="perflib.h.cs" />
  </ItemGroup>
</Project>
