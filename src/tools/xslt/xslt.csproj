<?xml version="1.0" encoding="utf-8"?>
<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <TargetFramework>netcoreapp3.1</TargetFramework>
    <GenerateAssemblyInfo>false</GenerateAssemblyInfo>
    <AutoGenerateBindingRedirects>true</AutoGenerateBindingRedirects>
    <GenerateBindingRedirectsOutputType>true</GenerateBindingRedirectsOutputType>
    <ApplicationIcon />
    <OutputType>Exe</OutputType>
    <RootNamespace>Reko.Tools.Xslt</RootNamespace>
    <AssemblyName>xslt</AssemblyName>
    <Configurations>Debug;Release</Configurations>
  </PropertyGroup>
  <ItemGroup>
    <XsltExtraFiles Include="$(TargetDir)xslt.deps.json" />
    <XsltExtraFiles Include="$(TargetDir)xslt.runtimeconfig.dev.json" />
    <XsltExtraFiles Include="$(TargetDir)xslt.runtimeconfig.json" />
  </ItemGroup>
  <!-- Copy dependencies to the `tools` directory.-->
  <Target Name="CopyToToolsDir" AfterTargets="CopyFilesToOutputDirectory">
    <Message Importance="high" Text="Copying $(TargetFilename) to tools directory" />
    <Copy SkipUnchangedFiles="true" SourceFiles="$(TargetDir)$(TargetFileName)" DestinationFolder="$(ProjectDir).." />
    <Copy SkipUnchangedFiles="true" Condition="$(OS)!='Unix'" SourceFiles="$(TargetDir)xslt.exe" DestinationFolder="$(ProjectDir).." />
    <Copy SkipUnchangedFiles="true" Condition="$(OS)=='Unix'" SourceFiles="$(TargetDir)xslt.dll" DestinationFolder="$(ProjectDir).." />
    <Copy SkipUnchangedFiles="true" Condition="Exists('$(TargetDir)xslt.deps.json')" SourceFiles="$(TargetDir)xslt.deps.json" DestinationFolder="$(ProjectDir).." />
    <Copy SkipUnchangedFiles="true" Condition="Exists('$(TargetDir)xslt.runtimeconfig.dev.json')" SourceFiles="$(TargetDir)xslt.runtimeconfig.dev.json" DestinationFolder="$(ProjectDir).." />
    <Copy SkipUnchangedFiles="true" Condition="Exists('$(TargetDir)xslt.runtimeconfig.json')" SourceFiles="$(TargetDir)xslt.runtimeconfig.json" DestinationFolder="$(ProjectDir).." />
  </Target>
</Project>
